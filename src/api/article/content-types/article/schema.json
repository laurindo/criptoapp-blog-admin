{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "article_published_at": {
      "type": "datetime"
    },
    "cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "author": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "bitcoin",
        "ethereum",
        "crypto",
        "business",
        "tech",
        "break-news"
      ]
    },
    "description": {
      "type": "string"
    }
  }
}
